<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SimpleTasks.TextView.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="SimpleTasks.TextView.Headline4" parent="SimpleTasks.TextView.Headline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SimpleTasks.TextView.Headline6" parent="SimpleTasks.TextView.Headline">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SimpleTasks.BrandName" parent="SimpleTasks.TextView.Headline4">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="SimpleTasks.CreatorName" parent="SimpleTasks.TextView.Headline4">
        <item name="android:letterSpacing">0.25</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="SimpleTasks.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_soft</item>
    </style>

    <style name="SimpleTasks.TextView.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
